<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="27sp"
        android:textColor="@color/tvTitle"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="80sp"
        android:gravity="center">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ötöslottó"
        android:textStyle="bold"
        android:width="330sp"
        android:textSize="20sp"
        android:layout_marginTop="5sp"
        android:textColor="@color/btnMainTextColor590"
        android:background="@drawable/button_main_lottery590"
        android:layout_gravity="center"
        android:id="@+id/btnMainLottery590">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hatoslottó"
        android:textStyle="bold"
        android:width="330sp"
        android:textSize="20sp"
        android:layout_marginTop="25sp"
        android:textColor="@color/btnMainTextColor645"
        android:background="@drawable/button_main_lottery645"
        android:layout_gravity="center"
        android:id="@+id/btnMainLottery645">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skandináv lottó"
        android:textStyle="bold"
        android:width="330sp"
        android:textSize="20sp"
        android:layout_marginTop="25sp"
        android:textColor="@color/btnMainTextColor735"
        android:background="@drawable/button_main_lottery735"
        android:layout_gravity="center"
        android:id="@+id/btnMainLottery735">
    </Button>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eurojackpot"
        android:textStyle="bold"
        android:width="330sp"
        android:textSize="20sp"
        android:layout_marginTop="25sp"
        android:textColor="@color/btnMainTextColorEurojackpot"
        android:background="@drawable/button_main_eurojackpot"
        android:layout_gravity="center"
        android:id="@+id/btnMainEurojackpot">
    </Button>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korábbi tippek"
        android:textStyle="bold"
        android:width="330sp"
        android:textSize="20sp"
        android:layout_marginTop="25sp"
        android:textColor="@color/btnMainPevTipTextColor"
        android:background="@drawable/button_main_viewtip"
        android:layout_gravity="center"
        android:id="@+id/btnMainPevTip">
    </Button>

</LinearLayout>