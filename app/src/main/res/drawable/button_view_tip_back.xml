<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorViewTipBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainPressedStartColorViewTipBack" android:endColor="@color/btnMainPressedEndColorViewTipBack"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorViewTipBack" />
            <solid android:color="@color/btnMainShapeEndColorViewTipBack"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainShapeBorderColorViewTipBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainShapeStartColorViewTipBack" android:endColor="@color/btnMainShapeEndColorViewTipBack" />
        </shape>
    </item>
</selector>