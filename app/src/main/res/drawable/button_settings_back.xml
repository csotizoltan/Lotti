<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorSettingsBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainPressedStartColorSettingsBack" android:endColor="@color/btnMainPressedEndColorSettingsBack"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorSettingsBack" />
            <solid android:color="@color/btnMainShapeEndColorSettingsBack"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainShapeBorderColorSettingsBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainShapeStartColorSettingsBack" android:endColor="@color/btnMainShapeEndColorSettingsBack" />
        </shape>
    </item>
</selector>